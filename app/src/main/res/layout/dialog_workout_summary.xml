<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <!-- 요약 정보 박스 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:background="#F0F0F0"
        android:elevation="2dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTintMode="src_in"
        android:clipToPadding="false"
        android:backgroundTint="#F3F3F3">

        <TextView
            android:id="@+id/summary_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜: 2025-05-13"
            android:textSize="18sp"
            android:fontFamily="@font/spoqa_han_sans_regular"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/summary_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거리: 0.00km"
            android:textSize="18sp"
            android:fontFamily="@font/spoqa_han_sans_regular"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/summary_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간: 00:00"
            android:textSize="18sp"
            android:fontFamily="@font/spoqa_han_sans_regular"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/summary_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="칼로리: 0 kcal"
            android:textSize="18sp"
            android:fontFamily="@font/spoqa_han_sans_regular"/>
    </LinearLayout>

    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"
        android:fontFamily="@font/spoqa_han_sans_bold"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:padding="12dp"
        android:textSize="16sp"/>
</LinearLayout>
