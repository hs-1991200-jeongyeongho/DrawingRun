<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    android:gravity="center_horizontal">

    <!-- 상단 메시지 -->
    <TextView
        android:id="@+id/summary_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 러닝 기록을 확인해보세요!"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/spoqa_han_sans_bold"
        android:textColor="#333333"
        android:layout_marginBottom="16dp" />

    <!-- 요약 카드 박스 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/summary_box_bg"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/summary_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜: 2025-05-21"
            android:textSize="18sp"
            android:textColor="#444444"
            android:fontFamily="@font/spoqa_han_sans_regular"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="6dp"
            android:background="#DDDDDD" />

        <TextView
            android:id="@+id/summary_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거리: 0.00 km"
            android:textSize="18sp"
            android:textColor="#444444"
            android:fontFamily="@font/spoqa_han_sans_regular"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="6dp"
            android:background="#DDDDDD" />

        <TextView
            android:id="@+id/summary_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간: 00분 00초"
            android:textSize="18sp"
            android:textColor="#444444"
            android:fontFamily="@font/spoqa_han_sans_regular"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="6dp"
            android:background="#DDDDDD" />

        <TextView
            android:id="@+id/summary_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="칼로리: 0 kcal"
            android:textSize="18sp"
            android:textColor="#444444"
            android:fontFamily="@font/spoqa_han_sans_regular"
            android:layout_marginBottom="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#DDDDDD" />
    </LinearLayout>

    <!-- 확인 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="✔ 확인"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/spoqa_han_sans_bold"
        android:background="@drawable/rounded_confirm_button" />

</LinearLayout>