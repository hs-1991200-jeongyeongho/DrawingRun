<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DrawingRun" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 툴바: 밝은 라이트 그레이 -->
        <item name="colorPrimary">#F5F5F5</item> <!-- light gray -->
        <item name="colorPrimaryVariant">#E0E0E0</item> <!-- 더 어두운 회색 -->
        <item name="colorOnPrimary">#212121</item> <!-- 짙은 텍스트/아이콘 -->

        <!-- 액션 버튼 계열 (오렌지) -->
        <item name="colorSecondary">#FF670C</item>
        <item name="colorSecondaryVariant">#E65C00</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- 기본 -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- 시스템 UI 색상 조정 -->
        <item name="android:statusBarColor">#F5F5F5</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
    </style>

    <style name="Theme.DrawingRun.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/drawing_run_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item> <!-- 1초 -->
        <item name="postSplashScreenTheme">@style/Theme.DrawingRun</item> <!-- 기존 앱 테마로 전환 -->
    </style>
</resources>
